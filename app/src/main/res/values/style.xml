        <item name="colorControlActivated">@color/enable_thumb_blue</item>
        <item name="colorSwitchThumbNormal">@color/disable_thumb_gray</item>
        <item name="android:colorForeground">@color/disable_foreground_gray</item>
    </style>

    <style name="appName">
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">35sp</item>
