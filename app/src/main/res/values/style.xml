<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="alarmItemSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/enable_thumb</item>
        <item name="colorSwitchThumbNormal">@color/disable_thumb</item>
        <item name="android:colorForeground">@color/disable_thumb_foreground</item>
    </style>

    <style name="appName">
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="chipOnWhiteBackground">
        <item name="android:checkable">true</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="chipCornerRadius">15dp</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
        <item name="chipBackgroundColor">
            @color/bg_chip_state_list_for_white_bg
        </item>
    </style>

    <style name="chipOnLightGrayBackground">
        <item name="android:checkable">true</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="chipCornerRadius">15dp</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
        <item name="chipBackgroundColor">
            @color/bg_chip_state_list_for_light_gray_bg
        </item>
    </style>
</resources>